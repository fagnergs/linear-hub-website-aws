# API Endpoint for Contact Form
NEXT_PUBLIC_API_ENDPOINT=http://localhost:3000/api/contact

# Email Service (Resend.com)
RESEND_API_KEY=re_your_api_key_here

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Notion Integration
NOTION_API_KEY=ntion_your_api_key_here
NOTION_CONTACTS_DATABASE_ID=your_contacts_database_id_here
NOTION_DEPLOYMENTS_DATABASE_ID=your_deployments_database_id_here

# Linear Integration
LINEAR_API_KEY=lin_your_api_key_here

# AWS Configuration (for GitHub Actions deployment)
# These are set as GitHub Secrets, not in .env files
# AWS_ACCESS_KEY_ID=<set-in-github-secrets>
# AWS_SECRET_ACCESS_KEY=<set-in-github-secrets>
# AWS_REGION=us-east-1
# S3_BUCKET=linear-hub-website-prod-1765543563
# CLOUDFRONT_DISTRIBUTION_ID=<set-in-github-secrets>

# Environment
NODE_ENV=development
